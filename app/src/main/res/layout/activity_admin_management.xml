<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.acer.multipingipadresses.AdminManagementActivity">

    <Button
        android:id="@+id/live_view_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Live View"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/playback_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/live_view_button"
        android:layout_alignStart="@+id/live_view_button"
        android:layout_below="@+id/live_view_button"
        android:text="Playback" />

    <Button
        android:id="@+id/object_management_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playback_button"
        android:layout_alignStart="@+id/playback_button"
        android:layout_below="@+id/playback_button"
        android:text="Object Management" />

    <Button
        android:id="@+id/user_management_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/object_management_button"
        android:layout_alignStart="@+id/object_management_button"
        android:layout_below="@+id/object_management_button"
        android:text="User Management" />

    <Button
        android:id="@+id/host_management_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_management_button"
        android:layout_alignStart="@+id/user_management_button"
        android:layout_below="@+id/user_management_button"
        android:text="Host Management" />

    <Button
        android:id="@+id/device_management_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/host_management_button"
        android:layout_alignStart="@+id/host_management_button"
        android:layout_below="@+id/host_management_button"
        android:text="Device Management" />
</RelativeLayout>
