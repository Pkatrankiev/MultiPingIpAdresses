<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fragment3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="40">

        <EditText
            android:id="@+id/edit_txt_descrip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="7"
            android:text="New Text"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edit_txt_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="6"
            android:text="New Text"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edit_txt_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="10"
            android:text="New Text"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edit_txt_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="11"
            android:text="New Text"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edit_txt_host_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="5"
            android:text="New Text"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edit_txt_device_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="5"
            android:text="New Text"
            android:textSize="12dp" />


    </LinearLayout>
</LinearLayout>