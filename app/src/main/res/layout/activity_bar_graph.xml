<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.acer.multipingipadresses.BarGraph.BarGraphActivity">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Обект: " />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/object_info" />

        <TextView
            android:id="@+id/object_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:text="New Text" />

        <TextView
            android:id="@+id/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name"
            android:layout_toLeftOf="@+id/object_name"
            android:layout_toStartOf="@+id/object_name"
            android:text="I. P.  " />

        <TextView
            android:id="@+id/object_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/object_name"
            android:layout_toEndOf="@+id/ip"
            android:layout_toRightOf="@+id/ip"
            android:text="New Text" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ip"
            android:layout_toLeftOf="@+id/object_address"
            android:layout_toStartOf="@+id/object_address"
            android:text="Адрес: " />

        <TextView
            android:id="@+id/object_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/address"
            android:layout_toEndOf="@+id/ip"
            android:layout_toRightOf="@+id/ip"
            android:text="New Text" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/address"
            android:text="Инфо: " />

        <TextView
            android:id="@+id/object_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_toRightOf="@+id/address"
            android:text="New Text" />

        <TextView
            android:id="@+id/device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="69dp"
            android:layout_marginStart="69dp"
            android:layout_toEndOf="@+id/object_name"
            android:layout_toRightOf="@+id/object_name"
            android:text=" Устройство: " />

        <TextView
            android:id="@+id/object_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/device"
            android:layout_toRightOf="@+id/device"
            android:text="New Text" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Вид обект: "
            android:layout_below="@+id/device"
            android:layout_alignLeft="@+id/device"
            android:layout_alignStart="@+id/device" />

        <TextView
            android:id="@+id/object_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"

            android:layout_below="@+id/device"
            android:layout_toRightOf="@+id/device"
            android:layout_toEndOf="@+id/device" />

        <!--

         <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
         -->

    </RelativeLayout>

</RelativeLayout>