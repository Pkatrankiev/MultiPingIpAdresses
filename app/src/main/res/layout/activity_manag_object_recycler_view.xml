<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_view_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentTop="true">

    </android.support.v7.widget.RecyclerView>
<TextView
    android:layout_width="match_parent"
    android:layout_height="18dp"
    android:background="#888"
    android:layout_above="@+id/linearLayout"
    android:gravity="center"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:text="Добавяне на нов обект"
    android:textStyle="bold"
    android:textColor="#fff"
    android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edit_add_descrip"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="7"
                    android:hint="Име на обекта"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edit_add_ip"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="6"
                    android:hint="IP Адрес"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edit_add_address"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="10"
                    android:hint="Адрес на обекта"
                    android:textSize="12dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1">


                <EditText
                    android:id="@+id/edit_add_info"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="11"
                    android:hint="Ифо за обекта"
                    android:textSize="12dp" />

                <Spinner
                    android:id="@+id/spinner_add_host_type"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="5"
                    android:text="New Text"
                    android:textSize="12dp" />

                <Spinner
                    android:id="@+id/spinner_add_device_type"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="5"
                    android:text="New Text"
                    android:textSize="12dp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0">


            <ImageView
                android:id="@+id/image_button_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/edit_icon" />



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>